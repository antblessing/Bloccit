<h1>All Posts</h1>
<% @posts.each do |post| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, post %>
        <% @posts = Post.all %>
        <% @posts.each_with_index do |post, index|  %>
          <% if index % 5 == 4 %>
          <% post.update_attributes(title: 'CENSORED')  %>
          <% end %>
        <% end %>  
      </h4>
    </div>
  </div>
<% end %> 